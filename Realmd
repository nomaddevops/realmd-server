FROM --platform=linux/amd64 ubuntu:18.04 as base

RUN apt-get -y update
RUN apt-get -y install git

RUN git clone https://github.com/mangoszero/server.git /home/ --recursive --depth=1 && \
    mkdir /home/build
WORKDIR /home/build

FROM --platform=linux/amd64 ubuntu:18.04 as build-realmd
COPY --from=base /home /home
WORKDIR /home/build
RUN apt update -y && apt install -y curl autoconf automake libbz2-dev libace-dev libssl-dev libmysqlclient-dev libtool build-essential gpg wget
RUN wget -O - https://apt.kitware.com/keys/kitware-archive-latest.asc 2>/dev/null | gpg --dearmor - | tee /usr/share/keyrings/kitware-archive-keyring.gpg >/dev/null && \
    echo 'deb [signed-by=/usr/share/keyrings/kitware-archive-keyring.gpg] https://apt.kitware.com/ubuntu/ bionic main' | tee /etc/apt/sources.list.d/kitware.list >/dev/null && \
    apt-get update && \
    apt-get -y install cmake
RUN cmake .. -DCMAKE_INSTALL_PREFIX=/mangos -DBUILD_MANGOSD=0 -DBUILD_REALMD=1 -DBUILD_TOOLS=0
RUN make -j4
RUN make install

FROM --platform=linux/amd64 ubuntu:18.04 as realmd
COPY --from=build-realmd /etc/realmd.conf.dist /etc/realmd/realmd.conf.dist
COPY --from=build-realmd /etc/realmd.conf.dist /etc/realmd/realmd.conf.dist
COPY --from=build-realmd /mangos/bin/realmd /usr/local/bin/
RUN chmod +x /usr/local/bin/realmd
RUN apt-get -y update && apt-get -y upgrade
RUN apt-get -y install libmysqlclient20 openssl
VOLUME ["/etc/realmd"]
EXPOSE 3724
CMD ["/usr/local/bin/realmd","-c","/etc/realmd/realmd.conf.dist"]
